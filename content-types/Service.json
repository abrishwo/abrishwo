{
  "name": "Service",
  "pluralName": "Services",
  "displayName": "Service",
  "kind": "collectionType",
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "icon": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Consulting",
        "Development",
        "Design",
        "Maintenance",
        "Training"
      ],
      "required": true
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "default.feature"
    },
    "technologies": {
      "type": "component",
      "repeatable": true,
      "component": "default.technology"
    },
    "metaTitle": {
      "type": "string"
    },
    "metaDescription": {
      "type": "text"
    },
    "keywords": {
      "type": "component",
      "repeatable": true,
      "component": "default.keyword"
    }
  }
}