{
  "name": "Team Member",
  "pluralName": "Team Members",
  "displayName": "Team Member",
  "kind": "collectionType",
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "bio": {
      "type": "richtext",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "skills": {
      "type": "component",
      "repeatable": true,
      "component": "default.skill"
    },
    "experience": {
      "type": "component",
      "repeatable": true,
      "component": "default.experience-item"
    },
    "certifications": {
      "type": "component",
      "repeatable": true,
      "component": "default.certification"
    },
    "linkedin": {
      "type": "string"
    },
    "github": {
      "type": "string"
    },
    "twitter": {
      "type": "string"
    },
    "metaTitle": {
      "type": "string"
    },
    "metaDescription": {
      "type": "text"
    }
  }
}